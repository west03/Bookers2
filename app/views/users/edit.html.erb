<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <h3 class="text-danger"><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <% @user.errors.full_messages.each do |message| %>
          <ul><li class="text-danger"><%= message %></li></ul>
        <% end %>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_Name">Name</label>
          <%= f.text_field:name,  name:'user[name]', value:@user.name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image, name:'user[profile_image]', value:@user.profile_image, class:"form-control-file user_image" %>
        </div>
        <div class="form-group">
        <label for="book_opinion">Introduction</label>
          <%= f.text_area :introduction, name:'user[introduction]', value:@user.introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>