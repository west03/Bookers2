<div class="container">
  <div class="row">
    <div class="mx-auto coll-11 col-sm-10 col-lg-8 col-xl-6">
      <h1>welcome to <i class="fas fa-book"></i><strong>Bookers</strong> !!</h1>
      <p>In <i class="fas fa-book"></i><strong>Bookers</strong> !!</p>
      <p>you can share and exchange your opinions , inpressions , and emotions</p>
      <p>about various books!</p>
      <% if user_signed_in? %>
      <div class="btn-wrapper col-10 mx-auto">
        <%= link_to 'Log in', user_path(current_user.id), class: 'btn btn-info btn-sm btn-block mb-3 sign-in' %>
        <%= link_to 'Sign Up', user_path(current_user.id), class: 'btn btn-success btn-sm btn-block sign_up' %>
      <% else %>
      <div class="btn-wrapper col-10 mx-auto">
        <%= link_to 'Log in', new_user_session_path, class: 'btn btn-info btn-sm btn-block mb-3 sign-in' %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-success btn-sm btn-block sign_up' %>
      <% end %>
      </div>
    </div>
  </div>
</div>